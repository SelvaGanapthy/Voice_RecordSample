<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.voice_recordsample.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/record_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Record"
            android:textColor="#ffffff"
            android:background="@drawable/button_shape" />

        <Button
            android:id="@+id/record_stop"
            android:text="Stop Record"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_shape" />

        <Button
            android:id="@+id/play_recorded_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="play Recorded audio"
            android:textColor="#ffffff"
            android:background="@drawable/button_shape" />
        <Button
            android:id="@+id/play_to_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="play to next"
            android:textColor="#ffffff"
            android:background="@drawable/button_shape" />

        <Button
            android:id="@+id/stop_recorded_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Stop Record audio"
            android:textColor="#ffffff"
            android:background="@drawable/button_shape" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="12dp"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/get_iv"
            android:src="@drawable/defaultimg"
            android:layout_height="100dp" />


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="chooseimg"
        android:src="@android:drawable/ic_input_add" />
</RelativeLayout>
